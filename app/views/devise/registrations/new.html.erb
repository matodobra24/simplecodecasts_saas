<div class="row text-center">
  
  <% if params[:plan] == '2' %>
  
    <div class="col-md-6 col-md-offset-3">
      
      <h1>Pro Account</h1>
      
      <p class="lead">Sign Up For The Pro Account For $10/Month And Get Access To The Community & Contact Information!</p>
      
    </div>

  <% else %>
  
  <div class="col-md-6 col-md-offset-3">
  
      <h1>Basic Account</h1>
      
      <p class="lead">Sign Up For Free And Get Basic Access To The Community!<p>
        
  </div>
      
  <% end %>
  

    <div class="col-md-6 col-md-offset-3 text-center">
        
          <div class="well">

              <h2>Sign up</h2>
              
              <% if params[:plan] == '2' %>
                
                <%= render "pro_form" %>
                
              <% else %>
              
                <%= render "basic_form" %>
              
              <% end %>

                <%= render "devise/shared/links" %>

        </div>
      </div>
</div>