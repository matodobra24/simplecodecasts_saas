<div class="row">
    
    <div class="col-md-8 col-md-offset-2">
        
        Index Page For All Users! <br/>

        <ul class="list-unstyled">
            
            <% @users.each do |users| %>
               
               <% if users.profile %>
               
               <li> 
               
                   <div class="well row <%= cycle('white-bg','') %>">
                       
                       <div class="col-sm-4 text-center">
                           
                         <% if users.profile.avatar %>

                           <%= link_to users do %>
                           
                                <%= image_tag users.profile.avatar.url(:thumb), class: 'users-index-avatar' %>
                                
                           <% end %>
                           
                        <% end %>
                       </div>
                           
                       <div class="col-sm-8">
                           
                            <%= link_to users do %>
                               <h2><%= users.profile.first_name %> <%= users.profile.last_name %></h2>
                            <% end %>
                           
                           <p class="lead">
                                <%= users.profile.job_title %>
                                <% if users.plan_id == 2 %>
                                
                                    <span class="label label-danger">PRO</span>
                                
                                <% end %>
                            </p>
                           
                       </div>
                       
                    </div>
                
                </li>
                
                <% end %> 
            
            <% end %>
            
        </ul>

    </div>

</div>